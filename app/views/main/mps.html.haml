- cache [@mps.size, @upd_mp.updated_at, 'mps'] do
  %h3.text-center
    = t('mps')
    .row
      .col-sm-3.col-sm-offset-3.col-md-3.col-md-offset-9.col-lg-3.col-lg-offset-9
        %span.text-right.small= "#{t('updated-at')} #{@upd_mp.updated_at.strftime('%d/%m/%Y %H:%M')}"
    .row
      - @mps.open.order("weight desc").each do |m|
        %a.btn.btn-sm{ 'style' => "margin-top: 5px;", :class => "#{m.weight < 4 ? 'btn-success' : (m.weight < 8 ? 'btn-warning' : 'btn-danger')}", :href => "https://www.waze.com#{t('wme')}/editor/?zoom=7\&venueFilter=3\&lat=#{m.latitude}\&lon=#{m.longitude}\&mapProblem=#{m.id}", 'data-toggle' => 'tooltip', 'data-placement' => 'top', 'title' => "#{type_mp(m.type_mp)}", :target => "WME"}
          %i.fa{class: "#{icon_mp(m.type_mp)}"}
          = m.id
